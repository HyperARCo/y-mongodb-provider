{
	"extends": "../../tsconfig",
	"compilerOptions": {
		"composite": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceRoot": "./src",
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist/**/*"]
}
