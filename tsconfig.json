{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["es2018", "dom"],
		"composite": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"outDir": "./dist"
	},
	"include": ["./src/**/*"],
	"exclude": ["../lib0/**/*", "node_modules/**/*", "dist/**/*", "./tests/**/*"]
}
